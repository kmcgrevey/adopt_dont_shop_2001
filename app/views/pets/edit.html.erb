<h1>Update A Pet</h1>

<%= form_tag("/pets/#{@pet.id}", method: :patch) do %>
  <%= label_tag :image %>
  <%= text_area_tag :image, "#{@pet.image}" %></br>
  
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@pet.name}" %></br>
  
  <%= label_tag :description %>
  <%= text_area_tag :description, "#{@pet.description}" %></br>
    
  <%= label_tag :approx_age %>
  <%= text_field_tag :approx_age, "#{@pet.approx_age}" %></br>
    
  <%= radio_button_tag(:sex, "female") %>
  <%= label_tag "female" %>
  <%= radio_button_tag(:sex, "male") %>
  <%= label_tag "male" %></br>

  <%= submit_tag "Update Pet" %>
<% end %>