<h1>Pets List</h1>

<% @pets.each do |pet| %>
  <section class = polaroid id='pet-<%=pet.id %>'>
    <div class = container><img src= <%= pet.image %>></div>
    <div class = petinfo>
      <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
      <p>Approx Age: <%= pet.approx_age %></p>
      <p>Sex: <%= pet.sex %></p>
      <p>Shelter: <%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></p>

      <%= link_to "Update Pet", "/pets/#{pet.id}/edit" %>
      <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %>
    </div>
    </section>
<% end %>